extends ../../layouts/ui-layout/ui-layout.pug

block variables
    - var title = 'Пост в блоге - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';
    
block content
    .main-wrapper
        .container.container--left.user-content.pt-35
            h1 Пост в блоге
            
            .section-ui
                include ../../sections/blog-post.pug

            pre.
                include ../../sections/blog-post.pug

            .title sections/blog-post.pug
            pre.
                .blog-post-heading-wrapper
                    .blog-post__date 30 ноября 2018
                    h1.blog-post__title Национальный парк Йосемити
                img(src="../img/blog/post-img.jpg").blog-post__img
                .blog-post__content
                    p Парк находится в горах #[a(href="#!") Сьерра-Невада] на востоке штата Калифорния и занимает ог    для Америки площадь... 
                    p Центром парка является долина #[a(href="#!") Йосемити], круглый год переполненная туристами, зат  части парка никаких туристов нет...
                .post-nav 
                    +button('Предыдущий пост')
                    +button('Следующий пост')